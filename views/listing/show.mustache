{{#listing}}
<div class="page">
	<div class="left">
		<p><a href="#" class="button">Contact host</a></p>
		
		<div class="description">
			<h2>{{title}}</h2>
			<small>{{address1}} {{city}}, {{province}}</small>
		</div>
		
		<div class="details">
			<h3>Contact</h3>
			<p><small>
			Website: <a href="{{website}}">{{website}}</a><br />
			Twitter: <a href="http://twitter.com/{{twitter}}">@{{twitter}}</a><br />
			Email: <a href="mailto:{{email}}">{{email}}</a>
			</small></p>
			
			<h3>Pricing</h3>
			<p>$100/Day $200/Week, $500/Month</p>
			
			<h3>Vibe</h3>
			<p>Collaborative startup</p>
			
			<h3>About</h3>
			<p>{{about}}</p>
		</div>
				
		<div class="map" data-query="{{address1}} {{city}}, {{province}}" data-zoom="14" data-control="large" data-type="map" data-placeholder="{{title}}"></div>
	</div>
	
	<div class="right">
		<div id="gallery">
	        {{#images}}
	        	<img src="{{.}}" width="610" height="420" />
	        {{/images}}
	    </div>

		<h3>Description</h3>
		<p>{{description}}</p>
		
		<h3>Amenities</h3>
		<ul class="tags">
			{{#tags}}
				<li>{{.}}</li>
			{{/tags}}
		</ul>
	</div>
	
	<script type="text/javascript">
		$(document).ready(function() {
			$('.map').gvmap().auto();
	        Galleria.loadTheme('/scripts/galleria/themes/classic/galleria.classic.min.js');
	        $("#gallery").galleria({
	            width: 640,
	            height: 480
	        });
		});
	
	
	</script>
	
	
	{{/listing}}
</div>